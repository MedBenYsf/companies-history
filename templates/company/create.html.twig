{% extends 'base.html.twig' %}

{% block title %}Hello CompanyController!{% endblock %}

{% block body %}
   <h1>Création d'une nouvelle société</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            {{ form_row(form.registrationCity, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            {{ form_row(form.registrationDate, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            {{ form_row(form.capital, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            {{ form_row(form.company, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            {{ form_row(form.address, {'attr': {'class': 'form-control'}})}}
        </div>
        <p>
            <input type="submit" class="btn btn-primary mr-3" value="Créer">
            <a href="{{ path('version_index')}}">Annuler</a>
        </p>
    {{ form_end(form)}}

{% endblock %}
